<div id="main-card" class="main-card">
    <h1>BudgetCop 2019</h1>
    <p style="color: green"><%= flash[:notice] %></p><br/>
    
    <div>
      <h2>Login</h2>
    </div>
    <%=form_with url: sessions_path, local: true do |f|%>
      <div class="container">
        
          <%= f.label :user_name %>
          <%= f.text_field :user_name , value: "" %>
      
        
          <%= f.label :password %>
          <%= f.password_field :password, value: "" %>
        

      </div>
        <div style="height: 50px; padding-top: 15px;">
          <%=f.submit "Log In"%>
        </div>
    <% end %>
 
  </div>